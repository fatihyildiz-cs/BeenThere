@model LocationListModel
@{
    Layout = "_Layout_admin";
}
@section Scripts{
    <script>$(document).ready(function () {
            $('#myTable').DataTable();
        });</script>
}


<table id="myTable" class="table table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>City</td>
            <td>State</td>
            <td>Country</td>
            <td>Latitude</td>
            <td>Longitude</td>
            <td style="width: 150px;"></td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Locations.Count() > 0)
        {
            @foreach (var location in Model.Locations)
            {
                <tr>
                        <td>@location.LocationId</td>
                        <td>@location.Name</td>
                        <td>@location.City</td>
                        <td>@location.State</td>
                        <td>@location.Country</td>
                        
                        <td>@location.Latitude</td>
                        <td>@location.Longitude</td>

                        <td>
                            <a href="/admin/locationedit/@location.LocationId" class="btn btn-primary btn-sm mr-2">Edit</a>
                            <a class="btn btn-sm btn-danger" href="/social/locationdelete/@location.LocationId">Delete</a>

                        </td>
                </tr>
            }
        }
        else
        {
            <div class="alert alert-warning">
                <h3>No Locations</h3>
            </div>
        }

    </tbody>
</table>

<a class="btn btn-sm btn-primary" href="/social/locationcreate">Create New Location</a>






