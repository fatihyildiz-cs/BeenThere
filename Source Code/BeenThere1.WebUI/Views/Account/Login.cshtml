@model LoginModel

@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/css/login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/login/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/login/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/css/login/css/util.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/style2.css">
    <style>

    </style>
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form asp-controller="account" asp-action="login" method="post" class="login100-form validate-form">
                    <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <span class="login100-form-title p-b-34">
                        Account Login
                    </span>

                    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Field required">
                        <input id="first-name" class="input100" asp-for="UserName" type="text" placeholder="User name">
                        <span class="focus-input100"></span>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 rs2-wrap-input100 validate-input m-b-20" data-validate="Field required">
                        <input class="input100" type="password" asp-for="Password" placeholder="Password">
                        <span class="focus-input100"></span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Sign in
                        </button>
                    </div>

                    <div class="w-full text-center p-t-27 p-b-239">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a href="/account/forgotpassword" class="txt2" data-toggle="modal" data-target="#exampleModal">
                            password?
                        </a>

                    </div>

                    <div class="w-full text-center">
                        <span class="txt1">
                            Don't have an account?
                        </span>

                        <a href="/account/register" class="txt3">
                            Sign Up
                        </a>
                    </div>
                </form>
                <div class="login100-more" style="background-image: url('/css/login/images/bg-01.jpg');"></div>


            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Forgot Password</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-header">
                    <h6 class="modal-title" id="exampleModalLabel">A password reset link will be sent to your email.</h6>
                </div>
                <form id="countryForm" asp-controller="account" asp-action="ForgotPassword" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Email:</label>
                            <input id="recipient-name" class="input100" name="Email" type="text" placeholder="Your email">
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Reset Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="dropDownSelect1"></div>
    <!--===============================================================================================-->
    <script src="~/css/login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/css/login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/css/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/css/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/css/login/vendor/select2/select2.min.js"></script>
    <script>$(".selection-2").select2({
            minimumResultsForSearch: 20,
            dropdownParent: $('#dropDownSelect1')
        });</script>
    <!--===============================================================================================-->
    <script src="~/css/login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/css/login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/css/login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/css/login/js/main.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    @if (Model.Popup == "IsNewAccount")
    {
        <script>swal("A confirmation link has been sent to your e-mail!", {
                timer: 6000,
            });</script>
    }
    @if (Model.Popup == "PasswordReset")
    {
        <script>swal("A password reset link has been sent to your e-mail!", {
                timer: 6000,
            });</script>
    }
    @if (Model.Popup == "PasswordResetSuccessfull")
    {
        <script>swal("Your password is successfully changed.", {
                timer: 6000,
            });</script>
    }
    @if (Model.Popup == "NoSuchUser")
    {
        <script>swal("No such email found in our database. Please check and retry.", {
                timer: 6000,
            });</script>
    }
</body>
</html>