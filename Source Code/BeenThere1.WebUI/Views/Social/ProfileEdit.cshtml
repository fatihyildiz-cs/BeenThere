@model ProfileModel

    <form asp-controller="social" asp-action="profileedit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="UserId">
        <input type="hidden" asp-for="UserName">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" class="form-control" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Bio"></label>
            <input asp-for="Bio" class="form-control" />
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="InstagramId"></label>
            <input asp-for="InstagramId" class="form-control" />
            <span asp-validation-for="InstagramId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="YoutubeId"></label>
            <input asp-for="YoutubeId" class="form-control" />
            <span asp-validation-for="YoutubeId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProfilePicUrl">Experience Thumbnail</label>
            <input type="hidden" asp-for="ProfilePicUrl">
            <img src="~/img/@Model.ProfilePicUrl" width="80" />
            <input type="file" name="file" />
            <span asp-validation-for="ProfilePicUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
    </form>